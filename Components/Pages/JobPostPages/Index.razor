@page "/jobposts"

@using Microsoft.AspNetCore.Components.QuickGrid
@inject JobBank.Components.Pages.JobPostPages.ViewModels.IIndexViewModel IndexViewModel
@rendermode InteractiveServer


<PageTitle>WORK Applications</PageTitle>

<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center mb-4 mt-3">
        <h1 class="display-6 m-0">WORK Applications</h1>
        <a href="jobposts/create" class="btn btn-primary shadow-sm">
            <i class="bi bi-plus-lg"></i> Create New
        </a>
    </div>

    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body bg-light rounded">
            <div class="row g-3 align-items-end">

                @if (IndexViewModel.DeclinedVisible)
                {
                    <div class="col-auto">
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" id="rejectedOnly"
                                   @oninput="IndexViewModel.LoadRejectedApplication"
                                   checked="@IndexViewModel.ApplicationDeclined">
                            <label class="form-check-label" for="rejectedOnly">Rejected Only</label>
                        </div>
                    </div>
                }

                @if (IndexViewModel.PendingVisible)
                {
                    <div class="col-auto border-start ps-3">
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" id="pendingOnly"
                                   @oninput="IndexViewModel.LoadPendingApplication"
                                   checked="@IndexViewModel.PendingOnly">
                            <label class="form-check-label" for="pendingOnly">Pending Only</label>
                        </div>
                    </div>
                }

                <div class="col-md-3">
                    <label class="form-label small fw-bold">From Date</label>
                    <InputDate class="form-control form-control-sm" TValue="DateTime?"
                               @bind-Value="IndexViewModel.FromDateTime" max="@IndexViewModel.FromMax" />
                </div>

                <div class="col-md-3">
                    <label class="form-label small fw-bold">To Date</label>
                    <InputDate class="form-control form-control-sm" TValue="DateTime?"
                               @bind-Value="IndexViewModel.ToDateTime" min="@IndexViewModel.ToMin"
                               max="@IndexViewModel.MaximumDateString" />
                </div>
            </div>
        </div>
    </div>

    <div class="table-responsive rounded shadow-sm">
        <QuickGrid Class="table table-hover align-middle mb-0" Items="IndexViewModel.FilteredJobPosts" RowClass="@IndexViewModel.GetRowCssClass">
            <PropertyColumn Property="jobpost => jobpost.Title" Title="Job Title" Sortable="true" />

            <PropertyColumn Property="jobpost => jobpost.Company" Sortable="true">
                <ColumnOptions>
                    <div class="p-2">
                        <input type="search" class="form-control form-control-sm"
                               @bind="IndexViewModel.CompanySearch" @bind:event="oninput"
                               placeholder="Filter Employer..." autofocus />
                    </div>
                </ColumnOptions>
            </PropertyColumn>

            <PropertyColumn Property="jobpost => jobpost.JobType" Title="Type" />

            <PropertyColumn Property="jobpost => jobpost.ApplicationDate" Format="MMM dd, yyyy" Title="Applied" Sortable="true" />

            <TemplateColumn Title="Outcome" Sortable="true">
                <span class="badge @(context.InterviewOutcome?.Contains("Reject") == true ? "bg-danger" : "bg-success")">
                    @context.InterviewOutcome
                </span>
            </TemplateColumn>

            <TemplateColumn Context="jobpost" Title="Actions" Class="text-end">
                <div class="btn-group btn-group-sm">
                    <a href="@($"jobposts/edit?id={jobpost.Id}")" class="btn btn-outline-secondary" title="Edit">Edit</a>
                    <a href="@($"jobposts/details?id={jobpost.Id}")" class="btn btn-outline-secondary" title="Details">Details</a>
                    <a href="@($"jobposts/delete?id={jobpost.Id}")" class="btn btn-outline-danger" title="Delete">Delete</a>
                </div>
            </TemplateColumn>
        </QuickGrid>
    </div>
</div>
