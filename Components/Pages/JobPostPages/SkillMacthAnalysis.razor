@page "/jobposts/SkillMacthAnalysis"
@inherits ViewModelBase<ISkillMacthAnalysisViewModel>

<div class="modal fade show" style="display:block; background-color: rgba(0,0,0,0.5);" role="dialog">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">@ViewModel.Title</h5>
                <button type="button" class="btn-close" @onclick="OnClose"></button>
            </div>
            <div class="modal-body">
                @if (ViewModel.IsLoading)
                {
                    <div class="text-center p-4">
                        <div class="spinner-border text-primary" role="status"></div>
                        <p>Analyzing Your Skill Set for this position...</p>
                    </div>
                }
                else if (ViewModel.IsErrorOrWarning)
                {
                    <div class="alert alert-@ViewModel.ErrorOrWarningClass" role="alert">
                        <p>Analyzing Your Skill Set for: @ViewModel.JobTitle</p>                        
                        <p>@ViewModel.ErrorOrWarningDescription</p>
                    </div>
                }
                else
                {
                    <p>Analyzing Your Skill Set for: @ViewModel.JobTitle</p>
                    
                }
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" @onclick="OnClose">Close</button>
            </div>
        </div>
    </div>
</div>



@code {
    [Parameter] public int JobPostId { get; set; }
    [Parameter] public EventCallback OnClose { get; set; }

    protected override async Task OnParametersSetAsync()
    {
        ViewModel.JobPostId = JobPostId;

        await ViewModel.InitializeAsync();
    }
}
