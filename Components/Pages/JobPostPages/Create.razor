@page "/jobposts/create"
@using Microsoft.EntityFrameworkCore
@using JobBank.Models
@inject IDbContextFactory<JobBank.Data.EmploymentBankContext> DbFactory
@inject NavigationManager NavigationManager
@rendermode InteractiveServer

<PageTitle>Create Job Post</PageTitle>

<div class="container pb-5">
    <div class="d-flex justify-content-between align-items-center my-4">
        <h1>Create Job Post</h1>
        <a href="/jobposts" class="btn btn-outline-secondary btn-sm">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-4">
            <EditForm method="post" Model="JobPost" OnValidSubmit="AddJobPost" FormName="create" Enhance>
                <DataAnnotationsValidator />
                <ValidationSummary class="alert alert-danger" role="alert" />

                <h5 class="text-primary mb-3">Job Details</h5>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label for="title" class="form-label fw-bold">Job Title</label>
                        <InputText id="title" @bind-Value="JobPost.Title" class="form-control" placeholder="e.g. Senior Developer" />
                        <ValidationMessage For="() => JobPost.Title" class="text-danger" />
                    </div>
                    <div class="col-md-6 mb-3">
                        <label for="company" class="form-label fw-bold">Company</label>
                        <InputText id="company" @bind-Value="JobPost.Company" class="form-control" placeholder="Company Name" />
                        <ValidationMessage For="() => JobPost.Company" class="text-danger" />
                    </div>
                </div>

                <div class="mb-3">
                    <label for="description" class="form-label fw-bold">Description</label>
                    <InputTextArea rows="4" id="description" @bind-Value="JobPost.Description" class="form-control" />
                    <ValidationMessage For="() => JobPost.Description" class="text-danger" />
                </div>

                <hr class="my-4" />

                <h5 class="text-primary mb-3">Classification</h5>
                <div class="row">
                    <div class="col-md-4 mb-3">
                        <label for="jobtype" class="form-label fw-bold">Job Type</label>
                        <InputText id="jobtype" @bind-Value="JobPost.JobType" class="form-control" placeholder="Full-time, Contract..." />
                    </div>
                    <div class="col-md-4 mb-3">
                        <label for="jobbase" class="form-label fw-bold">Work Location</label>
                        <InputText id="jobbase" @bind-Value="JobPost.JobBase" class="form-control" placeholder="Remote, Hybrid, On-site" />
                    </div>
                    <div class="col-md-4 mb-3">
                        <label for="applicationtype" class="form-label fw-bold">App Method</label>
                        <InputText id="applicationtype" @bind-Value="JobPost.ApplicationType" class="form-control" placeholder="LinkedIn, Referral..." />
                    </div>
                </div>

                <hr class="my-4" />

                <h5 class="text-primary mb-3">Timeline & Status</h5>
                <div class="row">
                    <div class="col-md-4 mb-3">
                        <label for="applicationdate" class="form-label fw-bold">Applied On</label>
                        <InputDate id="applicationdate" @bind-Value="JobPost.ApplicationDate" class="form-control" />
                    </div>
                    <div class="col-md-4 mb-3">
                        <label for="responsedate" class="form-label fw-bold">Response Received</label>
                        <InputDate id="responsedate" @bind-Value="JobPost.ResponseDate" class="form-control" />
                    </div>
                    <div class="col-md-4 mb-3">
                        <label for="interviewdate" class="form-label fw-bold">Interview Date</label>
                        <InputDate id="interviewdate" @bind-Value="JobPost.InterviewDate" class="form-control" />
                    </div>
                </div>

                <div class="row align-items-center mt-2">
                    <div class="col-md-6 mb-3">
                        <div class="form-check form-switch mt-2">
                            <InputCheckbox id="isapplied" @bind-Value="JobPost.IsApplied" class="form-check-input" />
                            <label for="isapplied" class="form-check-label fw-bold">Mark as Applied</label>
                        </div>
                        <div class="form-check form-switch mt-2">
                            <InputCheckbox id="ithaschallenge" @bind-Value="JobPost.ItHasChallenge" class="form-check-input" />
                            <label for="ithaschallenge" class="form-check-label fw-bold">Coding Challenge Included?</label>
                        </div>
                    </div>
                </div>

                <hr class="my-4" />

                <h5 class="text-primary mb-3">Contact & Follow-up</h5>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label for="contactemail" class="form-label fw-bold">Contact Email</label>
                        <InputText id="contactemail" @bind-Value="JobPost.ContactEmail" class="form-control" />
                    </div>
                    <div class="col-md-6 mb-3">
                        <label for="contactphone" class="form-label fw-bold">Contact Phone</label>
                        <InputText id="contactphone" @bind-Value="JobPost.ContactPhone" class="form-control" />
                    </div>
                </div>

                <div class="mb-3">
                    <label for="impression" class="form-label fw-bold">Initial Impression</label>
                    <InputText id="impression" @bind-Value="JobPost.Impression" class="form-control" />
                </div>

                <div class="mb-3">
                    <label for="comments" class="form-label fw-bold">Notes / Comments</label>
                    <InputTextArea id="comments" @bind-Value="JobPost.Comments" class="form-control" rows="2" />
                </div>

                <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                    <button type="submit" class="btn btn-primary btn-lg px-5">Save Job Post</button>
                </div>
            </EditForm>
        </div>
    </div>
</div>

@code {
    [SupplyParameterFromForm]
    private JobPost JobPost { get; set; } = new();

    // To protect from overposting attacks, see https://learn.microsoft.com/aspnet/core/blazor/forms/#mitigate-overposting-attacks.
    private async Task AddJobPost()
    {
        using var context = DbFactory.CreateDbContext();

        JobPost.Timestamp = DateTime.UtcNow;
        context.JobPost.Add(JobPost);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/jobposts");
    }
}
